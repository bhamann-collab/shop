{{#if user}}
<button class="log" style="width: auto;">
    Sign Out
</button>
{{else}}
<button onclick="document.getElementById('id01').style.display='block'" class="log" style="width: auto;">
    Login
</button>
<button onclick="document.getElementById('id03').style.display='block'" class="log" style="width: auto;">
    Sign Up
</button>
{{/if}}
<div id="id03" class="modal ">
    <form id="signupF" class="modal-content animate container">
        <div class="imgcontainer">
            <label for="uname"><b>Enter your details below</b></label>
            <input type="text" placeholder="First Name" id="fnameSU" required />
            <input type="text" placeholder="Last Name" id="lnameSU" required />
            <input type="text" placeholder="Email Address" id="emailSu" required />
            <input type="password" placeholder="Enter Password" id="pswSU" required />

            <button type="submit">Sign Up</button>
            <label>
                <input type="checkbox" checked="checked" name="remember" /> Remember
                me
            </label>
        </div>

        <div style="background-color: #f1f1f1;">
            <button type="button" onclick="document.getElementById('id03').style.display='none'" class="cancelbtn">
                Cancel
            </button>
        </div>
    </form>
</div>


<div id="id01" class="modal ">
    <form id="loginF" class="modal-content animate container">
        <div class="imgcontainer">
            <label for="uname"><b>Enter your details below</b></label>
            <input type="text" placeholder="Email Address" id="email" required />

            <input type="password" placeholder="Enter Password" id="psw" required />

            <button type="submit">Login</button>
            <label>
                <input type="checkbox" checked="checked" name="remember" /> Remember
                me
            </label>
        </div>

        <div style="background-color: #f1f1f1;">
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">
                Cancel
            </button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>
</div>

